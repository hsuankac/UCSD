	.text
    .global mySquareSum

mySquareSum:
    @ Save registers
    push {r4, r5, lr}

    @ Initialize variables
    mov r4, #0      @ Sum accumulator
    mov r5, #1      @ Current number to square

loop:
    @ Calculate square of r5 and add to accumulator
    mul r3, r5, r5  @ r3 = r5 * r5 (square of r5)
    add r4, r4, r3  @ Accumulate r3 to r4

    @ Check if we've squared up to n
    cmp r5, r0      @ Compare r5 and n
    bge done        @ Branch to 'done' if r5 >= n

    @ Increment r5 and loop
    add r5, r5, #1
    b loop

done:
    @ Place the result in r0
    mov r0, r4

    @ Restore registers and return
    pop {r4, r5, pc}

    .end
